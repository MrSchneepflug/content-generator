{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "types": [
      "node"
    ],
    "rootDir": "lib/",
    "outDir": "dist/"
  },
  "exclude": [
    "node_modules/",
    "dist/",
    "test/"
  ]
}
